.page-header
  = link_to new_user_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New User
%h1 Listing users

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Email
        %th{colspan: 3}


    %tbody.table-body
      - @users.each do |user|
        %tr
          %td
            = user.name
          %td
            = user.email
          %td
            = link_to 'Show', user
          %td
            = link_to 'Edit', edit_user_path(user) #if it's just user, it will be a two step process. It does not go to edit user page directly
          %td
            = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
